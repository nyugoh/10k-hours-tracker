<%- include('../partials/header.ejs') %>
<div class="ui container">
  <%- include('../partials/menu.ejs') %>
  <h3 class="header">Login Form</h3>
  <hr>
  <form action="/signin" method="post" class="ui form">
      <div class="field required">
        <label>Email/Username</label>
        <input name="email" required placeholder="Email/username..." type="text">
      </div>
      <div class="field required">
        <label>Password</label>
        <input required name="password" placeholder="Password here ..." type="password">
      </div>
      <button type="submit" class="ui submit button">SIGN IN</button>
  </form>
  <%if(message.length > 0){%>
  <div class="ui message error">
    <div class="message header">Error</div>
    <p><%=message%></p>
  </div>
  <%}%>
</div>
<%- include('../partials/footer.ejs') %>
